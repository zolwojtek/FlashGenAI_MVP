---
import AppLayout from "../layouts/AppLayout.astro";
---

<AppLayout title="FlashGen AI - Dashboard">
  <div class="container mx-auto">
    <h1 class="text-3xl font-bold mb-6">Welcome to FlashGen AI</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-semibold mb-4">Generate Flashcards</h2>
        <p class="text-gray-600 mb-4">
          Create AI-generated flashcards from your source text. Review and customize them before saving.
        </p>
        <a href="/generate" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700">
          Get Started
        </a>
      </div>
      
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-semibold mb-4">View Your Flashcard Sets</h2>
        <p class="text-gray-600 mb-4">
          Browse your saved flashcard sets and review them for study.
        </p>
        <a href="/flashcard-sets" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700">
          View Sets
        </a>
      </div>
    </div>
  </div>
</AppLayout>
